<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50cccccc"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/widget_recipe_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/chocolate"
        android:contentDescription="@string/recipe_icon"/>

    <TextView
        android:id="@+id/widget_recipe_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_recipe_image"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:textAlignment="viewStart"
        android:background="#50cccccc"
        android:text="@string/you_will_get_list_of_ingredients_here"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:gravity="start" />

</RelativeLayout>